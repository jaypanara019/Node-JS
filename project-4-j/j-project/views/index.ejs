<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MedCare - Health Solution</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        .d-flex {
            display: flex;
        }

        .banner-image {
            width: 600px;
            margin-left: 10%;
        }

        .hero-section {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: left;
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('../images/docter.avif') no-repeat center center/cover;
            color: white;
        }

        .hero-text {
            max-width: 50%;
        }

        .card-img-top {
            height: 180px;
            object-fit: cover;
        }

        .card {
            border: none;
            border-radius: 10px;
            transition: 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-custom {
            background: #00A8E8;
            border: none;
            padding: 12px 24px;
            font-size: 1.2rem;
            border-radius: 30px;
            transition: 0.3s;
        }

        .btn-custom:hover {
            background: #007bb5;
        }

        .footer {
            background: #222;
            color: white;
            padding: 20px 0;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">➕MEDCARE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Doctors</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section d-flex align-items-center">
        <div class="container">
            <div class="d-flex">
                <div class="hero-text">
                    <h1>Making Health Care Better Together</h1>
                    <p>Providing top-notch medical services for a healthier tomorrow.</p>
                    <a href="/insert" class="btn btn-dark">Make An Appointment</a>
                    <a href="/" class="btn btn-outline-light ms-3">View Department</a>
                </div>
                <div class="banner-image">
                    <img src="../images/banner.jpg" alt="" width="100%">
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="container text-center my-5">
        <h2 class="mb-4">Our Services</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card p-4 shadow-sm">
                    <img src="../images/primary-cases.jpeg" alt="" class="card-img-top">
                    <h5>Primary Care</h5>
                    <p>Comprehensive health checkups for all.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 shadow-sm">
                    <img src="../images/imergency-cases.jpg" alt="" class="card-img-top">
                    <h5>Emergency Cases</h5>
                    <p>24/7 Emergency Support for critical situations.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 shadow-sm">
                    <img src="../images/appointment.jpg" alt="" class="card-img-top">
                    <h5>Online Appointment</h5>
                    <p>Book your consultation easily online.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Patient Records (Cards) -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Patient Records</h2>

        <div class="row">
            <% if (PatientData.length > 0) { %>
                <% PatientData.forEach((patient) => { %>
                    <div class="col-md-4">
                        <div class="card shadow-sm mb-4">
                            <img src="<%= patient.patient_photo %>" class="card-img-top" alt="Patient Photo">
                            <div class="card-body">
                                <h5 class="card-title"><%= patient.patient_name %></h5>
                                <p class="card-text"><strong>Age:</strong> <%= patient.patient_age %></p>
                                <p class="card-text"><strong>Gender:</strong> 
                                    <%= patient.patient_gender === 'Male' ? '♂️ Male' : '♀️ Female' %>
                                </p>
                                <p class="card-text"><strong>Disease:</strong> <%= patient.disease %></p>

                                <div class="d-flex justify-content-between">
                                    <a href="/update/<%= patient.id %>" class="btn btn-warning btn-sm">Update</a>
                                    <form action="/delete/<%= patient.id %>" method="POST">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="text-muted">No Patient Records Available</p>
                </div>
            <% } %>
        </div>

        <div class="text-center mt-4">
            <a href="/insert" class="btn btn-success">Add New Patient</a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer text-center mt-5 p-3 bg-dark text-white">
        <p>&copy; 2025 MedCare Health Solutions. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
